<!DOCTYPE html>
<html lang="en">
    <!-- build timestamp: {{ "now"|date("Y-m-d, H:i:s") }} -->
    <head>
        {% include "_snippets/layout/head.twig" %}
        {% include "_snippets/styles.twig" %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body id="{% block body_id %}{% endblock %}">

        {% block body %}
            {% include "_snippets/menu.twig" %}

            <div class="container mobile-margin-top">
                {% include '_snippets/flash_messages.twig' %}

                {% block main %}{% endblock %}
            </div>
        {% endblock %}

        {% include "_snippets/layout/footer.twig" %}
        {% include "_snippets/layout/google_analytics.twig" %}
        {% include "_snippets/javascripts.twig" %}
    </body>
</html>
