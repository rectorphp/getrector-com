{% extends "base.twig" %}

{% set page_title %}Try Rector Online{% endset %}

{% block main %}
    <div id="rector_run_form" class="mt-4 mb-5">
        <form name="demo_form" method="post" action="{{ path('demo') }}">

        {# @var rector_run \Rector\WebsiteDemo\Entity\RectorRun #}

        {% if rector_run.hasRun and rector_run.successful != true %}
            <div class="alert alert-danger mb-5">
                <strong>Rector could not run due to error:</strong>

                {% for fatal_error_message in rector_run.fatalErrorMessages %}
                    {{ fatal_error_message | trim | nl2br }}
                {% endfor %}

                {% if rector_run.getErrors != [] %}
                    <ul class="mt-3 ml-0 pl-4">
                        {% for error in rector_run.getErrors %}
                            {# @var error \Rector\Website\ValueObject\Error #}
                            <li>
                                {{ error }}
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        {% endif %}

        <div class="card mb-3">
            <div class="card-header pt-2 pb-2 pl-3">Input Code</div>
            <div class="card-body p-0 mb-0">
                <div class="form-group">
                    <textarea id="demo_form_content" name="demo_form[content]" required="required" class="codemirror_php form-control">{{ rector_run.content }}</textarea>
                </div>
            </div>
        </div>

        {# @var rector_run \Rector\WebsiteDemo\Entity\RectorRun #}
        {% if rector_run.successful %}
            <div class="card bg-warning border-warning mb-4">
                <div class="card-header text-bold">
                    What did Rector change?
                </div>
                <div class="card-body p-0">
                    <textarea class="codemirror_diff">{{ rector_run.contentDiff }}</textarea>
                </div>
            </div>

            {# @var rector_run \Rector\WebsiteDemo\Entity\RectorRun #}
            {% if rector_run.appliedRules is not empty %}
                <div class="row">
                    <div class="pt-0 pb-4 col-12 col-sm-6">
                        <p class="mb-2">Applied Rules:</p>

                        <ul class="list-noindent">
                            {% for applied_rule in rector_run.appliedRules %}
                                <li>
                                    {# @var applied_rule \Rector\WebsiteDemo\ValueObject\AppliedRule #}
                                    <a href="{{ applied_rule.getGitHubReadmeLink }}">
                                        {{ applied_rule.shortClass }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="pt-0 pb-4 col-12 col-sm-6">
                        <p class="mb-2">Is the result wrong?</p>
                        <a href="{{ rector_run|issue_link }}" class="btn btn-danger">Create an issue</a>

                        {% if rector_run.canCreateFixture %}
                            <a href="{{ rector_run|pr_link }}" class="btn btn-primary ml-3">Create a Test</a>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        {% endif %}

        <div class="card mb-5">
            <div class="card-header pt-2 pb-2 pl-3">
                Config&nbsp;&nbsp;<code>rector.php</code>
            </div>

            <div class="card-body p-0">
                <div class="form-group">
                    <textarea id="demo_form_config" name="demo_form[config]" required="required" class="codemirror_php form-control">{{ rector_run.config }}</textarea>
                </div>
            </div>
        </div>

        <div class="mt-3 mb-5 text-center">
            <div class="form-group">
                <button type="submit" id="demo_form_process" name="demo_form[process]" class="btn btn-lg btn-success m-auto btn-demo-submit btn">Process</button>
            </div>
        </div>

        </form>

        <br>
    </div>
{% endblock %}
