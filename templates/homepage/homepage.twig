        <div class="text-center mt-2 mt-md-5">
            <a href="{{ path('hire_team') }}" class="btn btn-primary btn-lg">
                Hire Rector Team
            </a>

            <a href="{{ path('contact') }}" class="btn btn-success btn-lg ms-3">
