    <script>
        var app = document.getElementById('typewriter');

        var typewriter = new Typewriter(app, {
            loop: true,
            cursor: '*',
        });

        // @see https://safi.me.uk/typewriterjs/
        typewriter.typeString('Upgrade PHP')
            .pauseFor(600)
            .deleteChars(3)

            .typeString('Framework')
            .pauseFor(1200)
            .deleteAll()

            .typeString('Remove Legacy Code')
            .pauseFor(1200)
            .deleteChars(11)

            .typeString('Technical Debt')
            .pauseFor(1200)
