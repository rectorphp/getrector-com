{% extends "base.twig" %}

{# @var \Rector\Website\Blog\ValueObject\Post post #}
{% set page_title %}{{ post.title }}{% endset %}

{% block main %}
    <div class="container post" id="subpage">
        <small>
            <time datetime="{{ post.dateTime|date('Y-m-D') }}" class="text-muted">
                {{ post.dateTime|date('j. n. Y') }}
            </time>
        </small>

        <br>

        <div class="card mt-4 mb-4">
            <div class="card-body text-bigger">
                {{ post.perex|raw }}
            </div>
        </div>

        {{ post.htmlContent|raw }}

        <br>
        <br>
        <br>

        <div class="container">
            {% include "_snippets/disqus_comments.twig" %}
        </div>

        <br>
    </div>

{#    <script id="dsq-count-scr" src="https://{{ disqus_name }}.disqus.com/count.js" async defer></script>#}
{% endblock %}
