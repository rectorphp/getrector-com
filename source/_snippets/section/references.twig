<section class="section" id="client">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center">
                    <h2>You Don't Have to Take my Word for it</h2>
                </div>
            </div>
        </div>

        <div class="row mt-5 vertical-content" id="reference">
            <div class="col-12">
                {% for reference in references %}
                    <div class="mx-auto text-center">
                        <div class="mt-3">
                            <div class="mt-2 reference-text">
                                <q class="quote">{{ reference.text|markdown|raw }}</q>
                            </div>
                            <div class="mt-4">
                                <img src="/assets/images/references/{{ reference.photo }}" alt="" class="img-fluid mx-auto rounded-circle img-thumbnail">
                            </div>

                            <div class="mt-4">
                                <strong class="name">
                                    <a href="{{ reference.link }}">{{ reference.name }}</a>
                                </strong>
                                <p class="mb-0 font-weight-bold">{{ reference.position }}</p>

                                <br>

                                <img src="/assets/images/references/{{ reference.company_logo }}" alt="" class="img-fluid mx-auto">


                                {% if reference.case_study is defined %}
                                    <div class="clearfix"></div>
                                    <br>

                                    <a href="{{ reference.case_study }}" class="btn btn-warning btn-sm mt-3">
                                        <em class="pe-7s-glasses pe-lg"></em>
                                        &nbsp;
                                        Read Case Study
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
